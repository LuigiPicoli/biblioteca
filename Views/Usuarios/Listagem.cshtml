
@model List<Usuario>



<div class="row">
    <div class="col-md-12">
        @if(Model.Count > 0)
        { 
        <table class="table table-striped"> 
            <thead>
                <tr><th>Id</th>
                <th>Nome</th>
                <th>Login</th>
                <th>Senha</th>
                <th>Tipo</th>
                </tr>
            </thead>
            <tbody>
                @foreach(Usuario l in Model)
                {
                <tr>
                    <td>@l.Id</td>
                    <td>@l.Nome</td>
                    <td>@l.Login</td>
                    <td>@l.Senha</td>
                     <td>@l.Tipo</td>
                    <td><a href="/Usuarios/Editar/@l.Id">Editar</a></td>
                    <td><a href="excluirUsuario?Id=@l.Id">Excluir</a></td>
                </tr>
                }
            </tbody>
        </table>
        }
        else{
            <h1 style="text-align: center; color: red;">Nenhum registro encontrado</h1>
        }

        <a href="Registrar">Registrar novo usu√°rio</a>

    </div>
</div>